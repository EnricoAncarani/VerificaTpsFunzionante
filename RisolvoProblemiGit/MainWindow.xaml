<Window x:Class="VerificaTPS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VerificaTPS"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Autore" HorizontalAlignment="Left" Margin="89,50,0,0" VerticalAlignment="Top"/>
        <Label Content="Titolo" HorizontalAlignment="Left" Margin="95,81,0,0" VerticalAlignment="Top"/>
        <Label Content="Anno Di publicazione" HorizontalAlignment="Left" Margin="57,112,0,0" VerticalAlignment="Top"/>
        <Label Content="Editor" HorizontalAlignment="Left" Margin="95,143,0,0" VerticalAlignment="Top"/>
        <Label Content="NumeroPagine" HorizontalAlignment="Left" Margin="74,174,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxtNome" HorizontalAlignment="Left" Height="23" Margin="185,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TXTtitolo" HorizontalAlignment="Left" Height="23" Margin="185,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxtData" HorizontalAlignment="Left" Height="23" Margin="185,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxtEditor" HorizontalAlignment="Left" Height="23" Margin="185,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TXTnumeroPagine" HorizontalAlignment="Left" Height="23" Margin="185,177,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="AggiungiLibro" Content="Aggiungi Libro" HorizontalAlignment="Left" VerticalAlignment="Top" Width="124" Margin="195,238,0,0" Click="AggiungiLibro_Click"/>
        <Button x:Name="RicercaPerTitolo" Content="RicercaPerTitolo" HorizontalAlignment="Left" Margin="225,286,0,0" VerticalAlignment="Top" Width="125" Click="RicercaPerTitolo_Click"/>
        <Button x:Name="RicercaPerAutore" Content="RicercaPerAutore" HorizontalAlignment="Left" Margin="233,318,0,0" VerticalAlignment="Top" Width="114" RenderTransformOrigin="0.5,0.5" Click="RicercaPerAutore_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.731"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <ListBox x:Name="ListaBox" HorizontalAlignment="Left" Height="200" Margin="476,62,0,0" VerticalAlignment="Top" Width="211" RenderTransformOrigin="0.5,0.5" SelectionChanged="ListaBox_SelectionChanged">
            <ListBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.56"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ListBox.RenderTransform>
        </ListBox>
        <Label Content="Totale Libri Presenti" HorizontalAlignment="Left" Margin="343,20,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Totale_Libri_Presenti" Content="" HorizontalAlignment="Left" Margin="496,20,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
